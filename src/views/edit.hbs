<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <form action="/tasks/{{task._id}}/edit" method="POST">
            <h1>Update a Task</h1>
            <div class="mb-3">
                <input
                    type="text"
                    name="title"
                    id="title"
                    value="{{task.title}}"
                    class="form-control rounded-0 bg-dark text-white"
                />
            </div>
            <div class="mb-3">
                <textarea
                    name="description"
                    id="description"
                    row="3"
                    class="form-control rounded-0 bg-dark text-white"
                >
                    {{task.description}}
                </textarea>
            </div>
          <button class="btn btn-primary btn-sm mt-2">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>